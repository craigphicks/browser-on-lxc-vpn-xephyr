{
    "env": {
        "browser": false,
        "node":true,
        "commonjs": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "reject":"readonly",
        "resolve":"readonly",
        "args":"readonly",
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
//        "quotes": [
//            "error",
//            "double"
//        ],
        "semi": [
            "error",
            "always"
        ]
    }
}